<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here -->
    </style>

    <style name="AppTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/green</item> <!-- Replace with your desired stroke color -->
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/green</item> <!-- Replace with your desired color -->
        <item name="android:textColor">@android:color/black</item> <!-- Replace with your desired text color -->
        <item name="cornerRadius">8dp</item> <!-- Replace with your desired corner radius -->
        <item name="android:layout_marginTop">16dp</item> <!-- Replace with your desired margin top -->
        <item name="android:layout_marginStart">16dp</item> <!-- Replace with your desired margin start -->
        <item name="android:layout_marginEnd">16dp</item> <!-- Replace with your desired margin end -->
    </style>
</resources>
