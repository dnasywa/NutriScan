<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:top="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <stroke
                        android:width="4dp"
                        android:color="@color/green" /> <!-- Set your desired stroke color -->
                    <corners android:radius="8dp" /> <!-- Set the corner radius for rounded corners -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
